<div>
	<div>
		<form id='addRoommate'>
			<button type='submit'>Agregar Roommate</button>
		</form>
	</div>

	<div>
		{{#each roommates}}
			<p>{{this.nombre}}</p>
			<p>{{this.debe}}</p>
			<p>{{this.recibe}}</p>
		{{/each}}
	</div>
</div>

<div>
	<form id='addGasto'>
		<div>

			<div>
				<label for='roommate_id'>Nombre:</label>
				<select name='roommate_id' id='roommate_id'>
					{{#each roommates}}
						<option value='{{this.id}}'>{{this.nombre}}</option>
					{{/each}}
				</select>
			</div>
		</div>

		<div>
			<label for='descripcion'>Descripci√≥n:</label>
			<input type='textarea' name='descripcion' id='descripcion' />
		</div>

		<div>
			<label for='monto'>Monto:</label>
			<input type='number' name='monto' id='monto' />
		</div>

		<button type='submit'>Agregar Gasto</button>
	</form>
</div>

<div>
	{{#each gastos}}
		<p>{{this.roommate.nombre}}</p>
		<p>{{this.descripcion}}</p>
		<p>{{this.monto}}</p>

		<form class='updateGasto' data-id='{{this.id}}'>
			<button type='submit'>Editar</button>
		</form>

		<form class='deleteGasto' data-id='{{this.id}}'>
			<button type='submit'>Eliminar</button>
		</form>
	{{/each}}
</div>